# Snowflake Connection Configuration
SNOWFLAKE_ACCOUNT=your-account.snowflakecomputing.com
SNOWFLAKE_USER=your-username
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_DATABASE=MLOPS_DATABASE
SNOWFLAKE_SCHEMA=MLOPS_SCHEMA
SNOWFLAKE_WAREHOUSE=MLOPS_TASK_WH
SNOWFLAKE_ROLE=MLOPS_ROLE

# Alternative: Key-pair authentication (preferred)
# SNOWFLAKE_PRIVATE_KEY_PATH=/path/to/private_key.p8
# SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=your-passphrase

# Snowflake Registry Configuration
SNOWFLAKE_REGISTRY_URL=your-account.registry.snowflakecomputing.com/mlops_database/mlops_schema

# MLOps Framework Configuration
COMPUTE_POOL_NAME=MLOPS_COMPUTE_POOL
IMAGE_NAME=mlops_framework
IMAGE_TAG=latest

# Environment-specific configurations
ENVIRONMENT=dev
# For production, use: ENVIRONMENT=prod

# Development database overrides (optional)
SNOWFLAKE_DATABASE_DEV=MLOPS_DATABASE_DEV
SNOWFLAKE_SCHEMA_DEV=MLOPS_SCHEMA_DEV

# Production database settings (optional)
SNOWFLAKE_DATABASE_PROD=MLOPS_DATABASE_PROD
SNOWFLAKE_SCHEMA_PROD=MLOPS_SCHEMA_PROD

# Test database settings (optional)
SNOWFLAKE_DATABASE_TEST=MLOPS_DATABASE_TEST
SNOWFLAKE_SCHEMA_TEST=MLOPS_SCHEMA_TEST

# Pipeline Configuration
DEFAULT_COMPUTE_POOL_SIZE=SMALL
DEFAULT_MEMORY_REQUEST=2Gi
DEFAULT_CPU_REQUEST=1
DEFAULT_TIMEOUT_MINUTES=60

# Notification Configuration (optional)
ENABLE_EMAIL_NOTIFICATIONS=false
NOTIFICATION_EMAIL=admin@company.com

# Security Configuration
USE_KEY_PAIR_AUTH=true
ENCRYPT_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false 